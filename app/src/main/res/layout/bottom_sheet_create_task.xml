<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10"
    tools:context=".view.BottomSheetCreateTaskFragment">

    <EditText
        android:id="@+id/taskNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:background="@android:color/transparent"
        android:hint="@string/new_task"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="5"
        android:textSize="@dimen/text_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/taskDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:background="@android:color/transparent"
        android:hint="@string/task_description"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="5"
        android:textSize="@dimen/text_14"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskNameEditText"/>

    <ImageButton
        android:id="@+id/task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@null"
        android:contentDescription="@string/task_description"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dimen_8"
        android:src="@drawable/ic_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDescriptionEditText"
        tools:targetApi="n" />

    <ImageButton
        android:id="@+id/schedule_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@null"
        android:contentDescription="@string/schedule_task"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dimen_8"
        android:src="@drawable/ic_event_schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_description"
        app:layout_constraintTop_toBottomOf="@+id/taskDescriptionEditText"
        tools:targetApi="n" />


    <Button
        android:id="@+id/btnCreateTaskCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/create"
        android:textAllCaps="false"
        android:textColor="@drawable/selector_button_state"
        android:textSize="@dimen/text_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDescriptionEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>