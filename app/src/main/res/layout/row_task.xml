<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="task"
            type="com.makeover.todolist.room.model.Task" />

        <variable
            name="clickListener"
            type="com.makeover.todolist.view.dashboard.ui.task.TaskAdapter.TaskAdapterClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{() -> clickListener.onTaskClicked(task)}"
        android:padding="@dimen/dimen_20">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/task_title"
            style="@style/TextSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{task.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/task_description"
            style="@style/TextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{task.description.empty ? @string/empty_task_description : task.description}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>